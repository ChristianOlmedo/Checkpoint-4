{% extends 'layout.html.twig' %}

{% block title %}Into The Wild | Admin | Évènements
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}
{% block body %}
    <section class="d-flex justify-content-center">
        <div class="row text-center">
            <h1 class="title my-5">SUPPRIMER ÉVÈNEMENTS</h1>
        </div>
        <div class="sub-title">
            <form method="post" action="{{ path('admin_event_delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                <button class="btn">Delete</button>
            </form>
        </div>
    </section>
{% endblock %}
