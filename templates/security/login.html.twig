{% extends 'layout.html.twig' %}

{% block title %}Into The Wild | Connexion
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}
{% block body %}
    <section class="d-flex justify-content-center mt-5">
        <div class="row text-center">
            <h1 class="title my-5">CONNEXION</h1>
            <h2 class="sub-title my-5">LIBÈRE TON CÔTÉ SAUVAGE AUPRÈS DE</br>PASSIONNÉS DE JEUX VIDÉO</h2>
        </div>
    </section>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Tu es connecté {{ app.user.email }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <div class="col-3 mx-5 mt-5">
        <h2 class="sub-title h3 mb-3 font-weight-normal">Connecte toi !</h2>
        <label class="sub-sub-title" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label class="sub-sub-title" for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

        <button class="connexion btn btn-lg btn-primary my-5" type="submit">
            Connexion
        </button>
        <a href="{{ path('app_register') }}" class="connexion btn btn-lg btn-primary my-5" type="submit">
            Pas encore inscrit ?
        </a>
    </div>
</form>
{% endblock %}
