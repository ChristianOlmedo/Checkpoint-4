{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Into The Wild | Sponsors
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}
{% block body %}
    <section class="d-flex justify-content-center">
        <div class="row text-center">
            <h1 class="title my-5">CONTACT</h1>
            <h2 class="sub-title my-5">LIBÈRE TON CÔTÉ SAUVAGE AUPRÈS DE</br>PASSIONNÉS DE JEUX VIDÉO</h2>
        </div>
    </section>
     <section class="col-lg-3 offset-lg-1 d-flex justify-content-center">
        <div class="sub-sub-title text-center">
                    {{ form_start(form) }}
                    <div class="fw-bold mt-5">
                        <div class="mb-4 ">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="mb-4">
                            {{ form_row(form.lastname) }}
                        </div>
                        <div class="mb-4">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="mb-4">
                            {{ form_row(form.object) }}
                        </div>
                        <div class="mb-4">
                            {{ form_row(form.message) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-dark mt-2 mb-5 sub-sub-title">Envoyer</button>
                    </div>
                    {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
